{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "An online resource",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "the system-generated ID of the record within its own system"
    },
    "url": {
      "type": "string",
      "description": "Link to the online resource",
      "example": "https://www.ncbi.nlm.nih.gov/pubmed/"
    },
    "title": {
      "type": "string",
      "description": "the primary title (or label) associated with the resource"
    },
    "altTitle": {
      "type": "string",
      "description": "an alternative title for the resource."
    },
    "publisher": {
      "type": "string",
      "description": "name of publisher of the resource"
    },
    "description": {
      "type": "string",
      "description": "an introduction of the resource"
    },
    "creatorUsername": {
      "type": "string",
      "description": "username of the user who created the record",
      "example": "johndoe17",
      "readonly": true
    },
    "type": {
      "type": "string",
      "description": "content type of the resource",
      "enum": [
        "audio",
        "audiobooks",
        "databases",
        "ebooks",
        "handbooks",
        "maps",
        "music",
        "newspapers",
        "newsletters",
        "patents",
        "periodicals",
        "posters",
        "proceedings",
        "reports",
        "standards",
        "thesisanddissertation",
        "unspecified",
        "video",
        "webresources"
      ]
    },
    "identifier": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "value": {
            "type": "string",
            "description": "identifier type : e.g. ISSN"
          },
          "type": {
            "type": "string",
            "description": "identifier value"
          }
        }
      },
      "additionalItems": true,
      "uniqueItems": true,
      "description": "an extensible set of name-value pairs of identifiers associated with the resource"
    },
    "locationId": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "title",
    "url"
  ]
}
