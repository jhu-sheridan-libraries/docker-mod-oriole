{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "An online resource",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "the system-generated ID of the record within its own system"
    },
    "altId": {
      "type": "string",
      "description": "an alternative unique identifier"
    },
    "url": {
      "type": "string",
      "description": "Link to the online resource",
      "example": "https://www.ncbi.nlm.nih.gov/pubmed/"
    },
    "title": {
      "type": "string",
      "description": "the primary title (or label) associated with the resource"
    },
    "altTitle": {
      "type": "string",
      "description": "an alternative title for the resource."
    },
    "publisher": {
      "type": "string",
      "description": "name of publisher of the resource"
    },
    "creator": {
      "type": "string",
      "description": "name of the creator of the resource"
    },
    "description": {
      "type": "string",
      "description": "an introduction of the resource"
    },
    "creatorUsername": {
      "type": "string",
      "description": "username of the user who created the record",
      "example": "johndoe17",
      "readonly": true
    },
    "identifier": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "value": {
            "type": "string",
            "description": "identifier value"
          },
          "type": {
            "type": "string",
            "description": "identifier type : e.g. ISSN"
          }
        }
      },
      "additionalItems": true,
      "uniqueItems": true,
      "description": "an extensible set of name-value pairs of identifiers associated with the resource"
    },
    "libraryId": {
      "type": "string"
    },
    "terms": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "subject": {
            "type": "object",
            "$ref": "subject.json"
          },
          "category": {
            "type": "string"
          },
          "score": {
            "type": "number"
          }
        },
        "uniqueItems": true
      }
    },
    "keywords": {
      "type": "string",
      "readonly": true
    },
    "passwords": {
      "type": "string"
    },
    "tags": {
      "type" : "object",
      "$ref" : "../raml-util/schemas/tags.schema"
    }
  },
  "required": [
    "id",
    "title",
    "url"
  ]
}
