{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "value": {
            "type": "string",
            "description": "a note"
          },
          "libraryId": {
            "type": "string",
            "description": "library identifier"
          }
        }
      },
      "additionalItems": true,
      "uniqueItems": true,
      "description": "an extensible set of notes by libraries"

    },
    "metadata": {
      "type": "object",
      "$ref": "../raml-util/schemas/metadata.schema",
      "readonly": true
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "libraryId"
  ]
}