{
  "id": "${artifactId}-${version}",
  "name": "The ORIOLE module",
  "provides": [
    {
      "id": "oriole-resources",
      "version": "1.0",
      "handlers": [
        {
          "methods": [ "GET" ],
          "pathPattern": "/oriole-resources",
          "permissionsRequired": [ "oriole.resources.collection.get" ]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/oriole-resources/{id}",
          "permissionsRequired": [ "oriole.resources.item.get" ]
        },
        {
          "methods": [ "POST" ],
          "pathPattern": "/oriole-resources",
          "permissionsRequired": [ "oriole.resources.item.post" ]
        },
        {
          "methods": [ "PUT" ],
          "pathPattern": "/oriole-resources/{id}",
          "permissionsRequired": [ "oriole.item.put" ],
          "permissionsRequired": [ "oriole.resources.item.put" ]
        },
        {
          "methods": [ "DELETE" ],
          "pathPattern": "/oriole-resources/{id}",
          "permissionsRequired": [ "oriole.resources.item.delete" ]
        }
      ]
    },
    {
      "id": "oriole-locations",
      "version": "1.0",
      "handlers": [
        {
          "methods": [ "GET" ],
          "pathPattern": "/oriole-locations",
          "permissionsRequired": [ "oriole.locations.collection.get" ]
        },
        {
          "methods": [ "GET" ],
          "pathPattern": "/oriole-locations/{id}",
          "permissionsRequired": [ "oriole.locations.item.get" ]
        },
        {
          "methods": [ "POST" ],
          "pathPattern": "/oriole-locations",
          "permissionsRequired": [ "oriole.locations.item.post" ]
        },
        {
          "methods": [ "PUT" ],
          "pathPattern": "/oriole-locations/{id}",
          "permissionsRequired": [ "oriole.locations.item.put" ]
        },
        {
          "methods": [ "DELETE" ],
          "pathPattern": "/oriole-locations/{id}",
          "permissionsRequired": [ "oriole.locations.item.delete" ]

        },
        {
          "methods": [ "DELETE" ],
          "pathPattern": "/oriole-locations",
          "permissionsRequired": [ "oriole.locations.collection.delete" ]
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "oriole.resources.collection.get",
      "displayName": "Oriole resources collection get",
      "description": "Get a collection of Oriole resource records"
    },
    {
      "permissionName": "oriole.resources.item.get",
      "displayName": "Oriole resources item get",
      "description": "Get an individual Oriole resource record"
    },
    {
      "permissionName": "oriole.resources.item.post",
      "displayName": "Oriole resources item post",
      "description": "Create a new Oriole resource record"
    },
    {
      "permissionName": "oriole.resources.item.put",
      "displayName": "Oriole resources item put",
      "description": "Update an Oriole resource record"
    },
    {
      "permissionName": "oriole.resources.item.delete",
      "displayName": "Oriole resources item delete",
      "description": "Delete an Oriole resource record"
    },
    {
      "permissionName": "oriole.resources.admin",
      "displayName": "Oriole resources admin",
      "description": "Admin Oriole resources",
      "subPermissions": [
        "oriole.resources.collection.get",
        "oriole.resources.item.get",
        "oriole.resources.item.post",
        "oriole.resources.item.put",
        "oriole.resources.item.delete",
        "oriole.locations.collection.delete"
      ],
      "visible": true
    },
    {
      "permissionName": "oriole.locations.item.post",
      "displayName": "Oriole locations item add",
      "description": "Add a new Oriole Location"
    },
    {
      "permissionName": "oriole.locations.item.delete",
      "displayName": "Oriole locations item delete",
      "description": "Remove a Oriole Location"
    },
    {
      "permissionName": "oriole.locations.collection.delete",
      "displayName": "Oriole locations collection delete",
      "description": "Remove all Oriole locations"
    },
    {
      "permissionName": "oriole.locations.item.put",
      "displayName": "Oriole locations item edit",
      "description": "Edit an Oriole Location"
    },
    {
      "permissionName": "oriole.locations.collection.get",
      "displayName": "Oriole locations get",
      "description": "Get Oriole Locations"
    },
    {
      "permissionName": "oriole.locations.item.get",
      "displayName": "Oriole locations item get",
      "description": "Get Oriole Locations"
    },
    {
      "permissionName": "oriole.locations.admin",
      "displayName": "Oriole locations admin",
      "description": "Admin Oriole Locations",
      "subPermissions": [
        "oriole.locations.item.post",
        "oriole.locations.item.delete",
        "oriole.locations.item.put",
        "oriole.locations.collection.get",
        "oriole.locations.item.get"
      ],
      "visible": true
    }
  ]
}
